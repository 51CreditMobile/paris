<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Green">
        <item name="android:drawableBottom">@null</item>
        <item name="android:drawableLeft">@null</item>
        <item name="android:drawableRight">@null</item>
        <item name="android:drawableTop">@null</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <!--<item name="android:letterSpacing">1dp</item>-->
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:lineSpacingMultiplier">1</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">20</item>
        <item name="android:minLines">2</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:singleLine">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#FF00FF00</item>
        <item name="android:textSize">20sp</item>
        <item name="android:text">This is a red text with style applied from resource</item>
    </style>

    <style name="Blue">
        <item name="android:drawableBottom">@null</item>
        <item name="android:drawableLeft">@null</item>
        <item name="android:drawableRight">@null</item>
        <item name="android:drawableTop">@null</item>
        <item name="android:ellipsize">start</item>
        <item name="android:gravity">end</item>
        <!--<item name="android:letterSpacing">1dp</item>-->
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:lineSpacingMultiplier">1</item>
        <item name="android:lines">3</item>
        <item name="android:maxLines">20</item>
        <item name="android:minLines">2</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:singleLine">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#FF0000FF</item>
        <item name="android:textSize">10sp</item>
        <item name="android:text">This is a blue text with style applied from resource</item>
    </style>

</resources>
