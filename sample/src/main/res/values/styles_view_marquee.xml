<resources>

    <declare-styleable name="MarqueeView">
        <attr name="image" format="reference" />
        <attr name="displayStyle" format="reference" />
        <attr name="displayText" format="string" />
    </declare-styleable>

    <style name="MarqueeView">
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="displayStyle">@style/Text.Display1.MarqueeView_Display</item>
    </style>

    <style name="MarqueeView.Alternate">
        <item name="displayStyle">@style/Text.Display2.MarqueeView_Display_Alternate</item>
    </style>

    <style name="Text.Display1.MarqueeView_Display">
        <item name="android:background">#66000000</item>
        <item name="android:letterSpacing">.2</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Text.Display2.MarqueeView_Display_Alternate">
        <item name="android:background">#CCFFFFFF</item>
        <item name="android:paddingEnd">@dimen/space4</item>
        <item name="android:paddingStart">@dimen/space4</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>
