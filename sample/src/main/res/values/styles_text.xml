<resources>

    <style name="Text">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Text.Display2">
        <item name="android:textSize">45sp</item>
    </style>

    <style name="Text.Display1">
        <item name="android:textSize">34sp</item>
    </style>

    <style name="Text.Headline">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Text.Title">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text.Subheading">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Body2" parent="Text.Body1">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Text.Body1">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Caption">
        <item name="android:textSize">12sp</item>
    </style>

</resources>
