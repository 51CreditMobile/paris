<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <com.airbnb.paris.sample.MarqueeView
            android:id="@+id/marquee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:displayText="Paris Sample"
            app:image="@drawable/eiffel_header"
            style="@style/MarqueeView"
            />

        <com.airbnb.paris.sample.SectionView
            android:id="@+id/section1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentText="Paris let's you create, organize and apply styles in completely new ways."
            app:titleText="Android Styles on Steroid"
            app:buttonText="Restyle this screen!"
            style="@style/SectionView"
            />

        <com.airbnb.paris.sample.SectionView
            android:id="@+id/section2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentText="Paris separates styles from layouts which means you can create complex, semantic view components and customize them endlessly.\n\nThis entire screen is built with 2 custom view types."
            app:titleText="Semantic Components"
            style="@style/SectionView.Interstitial"
            />

        <com.airbnb.paris.sample.SectionView
            android:id="@+id/section3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentText="Paris is used extensively at Airbnb and powers most of what's displayed on any given screen."
            app:titleText="Powering Airbnb"
            style="@style/SectionView"
            />

    </LinearLayout>

</ScrollView>
